{% set alb = alb if alb is defined else {} %}
{% set nlb = nlb if nlb is defined else {} %}

locals {
  spryker = read_terragrunt_config(find_in_parent_folders("config/common/spryker.hcl"))
  alb = {
    balancer_name = "${local.spryker.locals.project_name}"
    is_protected  = {{ alb | safe_get(['is_protected'], false) | lower }}
  }
  nlb = {
    internal                      = {{ nlb | safe_get(['internal'], true) | lower }}
    balancer_name                 = "${local.spryker.locals.project_name}-main"
    enable_vpc_endpoint_service   = {{ nlb | safe_get(['enable_vpc_endpoint_service'], false) | lower }}
    vpc_endpoint_allowed_accounts = {{ nlb | safe_get(['vpc_endpoint_allowed_accounts'], []) }}
  }
}
